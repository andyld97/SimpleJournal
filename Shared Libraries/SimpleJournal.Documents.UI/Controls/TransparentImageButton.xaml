<UserControl x:Class="SimpleJournal.Documents.UI.Controls.TransparentImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleJournal.Documents.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Opacity="0.6" Color="White" />
    </UserControl.Background>
    <Grid Background="Transparent">
        <Image Source="{Binding Image}" RenderOptions.BitmapScalingMode="Fant" Cursor="Hand" Margin="2" MouseDown="Image_MouseDown" />
    </Grid>
</UserControl>