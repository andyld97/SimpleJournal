<templates:DropDownTemplate x:Class="SimpleJournal.Controls.Templates.PenDropDownTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleJournal.Controls"
             xmlns:res="clr-namespace:SimpleJournal.Properties"
             xmlns:templates="clr-namespace:SimpleJournal.Controls.Templates"
             mc:Ignorable="d"                             
             Width="6.3cm" BorderBrush="Black" BorderThickness="1">
    <!--Height 300 -->
    <StackPanel Background="{DynamicResource Fluent.Ribbon.Brushes.RibbonTabItem.Active.Background}">
        <local:PenSizeControl x:Name="PenSize" SwitchtedPenSize="PenSize_SwitchtedPenSize" />
        <local:ColorPalette x:Name="colorPalette" Margin="0,5,0,0"/>
    </StackPanel>
</templates:DropDownTemplate>