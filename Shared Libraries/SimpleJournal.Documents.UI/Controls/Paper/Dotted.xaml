<UserControl x:Class="SimpleJournal.Documents.UI.Controls.Paper.Dotted"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:SimpleJournal.Documents.UI.Controls"
             mc:Ignorable="d" 
      Height="29.7cm" Width="21cm">
    <UserControl.Resources>      
        <DrawingBrush Stretch="None" TileMode="Tile" x:Key="DottetBrush" Viewport="0,0,20,20" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <EllipseGeometry RadiusX="0.5" RadiusY="0.5" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Thickness="2" Brush="Black" />
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    <Grid>
        <Border Background="White" UseLayoutRounding="True" SnapsToDevicePixels="True">
            <controls:DrawingCanvas Background="{StaticResource DottetBrush}" x:Name="canvas" Height="29.7cm" Width="21cm"/>
        </Border>
    </Grid>
</UserControl>