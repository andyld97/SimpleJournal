<UserControl x:Class="SimpleJournal.Controls.ImageDesign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleJournal.Controls"
             xmlns:res="clr-namespace:SimpleJournal.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <StackPanel Background="Transparent">
            <TextBlock Margin="3,0,0,0" Text="{x:Static res:Resources.strRotation}"/>
            <local:NumericUpDown x:Name="numAngle" OnChanged="NumAngle_OnChanged" Step="5" Value="0" Minimum="0" Maximum="360" Margin="5" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
