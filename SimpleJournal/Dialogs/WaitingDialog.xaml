<Window x:Class="SimpleJournal.Dialogs.WaitingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleJournal.Dialogs"
        xmlns:res="clr-namespace:SimpleJournal.Properties"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.strPleaseWaitTitle}" Height="110" Width="600" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" 
        Background="{DynamicResource WhiteBrush}">
    <Grid Background="Transparent">
        <StackPanel Margin="2" Background="Transparent">
            <TextBlock x:Name="txtInfo" Margin="5" FontSize="16" TextAlignment="Left" Text="{x:Static res:Resources.strWatingText}" Foreground="{DynamicResource BlackBrush}"/>
            <ProgressBar x:Name="prgProgress" IsIndeterminate="True" Height="20" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
